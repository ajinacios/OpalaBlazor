@page "/"
@inject IJSRuntime js

<PageTitle>Opala</PageTitle>

<AuthorizeView>
    <NotAuthorized>
        <h5>Faça Login</h5>
    </NotAuthorized>
</AuthorizeView>
@*<SurveyPrompt Title="OPALA" />*@
<h4>Opala - Sistema de Relatórios de Inspeção do Interior</h4>



<AuthorizeView>
    <Authorized>
        <br /><br />
        <button class="btn btn-outline-primary" @onclick="DisplayGreetingAlert">Display</button>
    </Authorized>
</AuthorizeView>

@code{
    [CascadingParameter]
    private Task<AuthenticationState> authenticationState { get; set; }

    private async Task DisplayGreetingAlert()
    {
        var authState = await authenticationState;
        var message = $"Não autorizado {authState.User.Identity.Name}";
        await js.InvokeVoidAsync("alert", message);
    }
}
