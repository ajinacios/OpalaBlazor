@page "/login"
@inherits LoginBase

<div class="row">
    <div class="col-lg-4 offset-lg-4 pt-4 pb-4 border">
        <div class="mb-3 text-center">
            <h3>LOGIN</h3>
        </div>
        <EditForm Model="model" OnValidSubmit="Authenticate">
            <DataAnnotationsValidator></DataAnnotationsValidator>
            <div class="form-group mb-3">
                <InputText id="login" class="form-control" placeholder="Login" @bind-Value="model.Login"></InputText>
                <ValidationMessage For="@(() => model.Login)" />
            </div>
            <div class="form-group mb-3">
                <InputText id="senha" class="form-control" type="password" placeholder="Senha" @bind-Value="model.Password"></InputText>
                <ValidationMessage For="@(() => model.Password)" />
            </div>
            <div class="mb-3 d-grid gap-2">
                <button class="btn btn-primary">Entrar</button>
            </div>
        </EditForm>
    </div>
</div>
